<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">
    <include layout="@layout/titlebar_three"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:background="#f5f5f5"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="搜索条件动态"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="20sp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="#efefef"
                        android:layout_gravity="center_horizontal"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="您关注的检索条件暂无更新                  "
                        android:padding="5dp"
                        android:textColor="#626262"
                        android:layout_marginLeft="5dp"
                        android:textSize="18sp"
                        android:drawableRight="@drawable/enter_32"
                        android:id="@+id/textView"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索条件动态"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp">
                </TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#efefef"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_margin="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保险小贴士"
                    android:drawableLeft="@drawable/tips_100"
                    android:layout_weight="0.43"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="#efefef"
                        android:layout_gravity="center_horizontal"
                        />

                    <TextView
                        android:layout_margin="20dp"
                        android:layout_width="229dp"
                        android:layout_height="wrap_content"
                        android:text="保险合同常见陷阱"
                        android:drawableLeft="@drawable/trap_100"
                        android:id="@+id/textView5"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>




</LinearLayout>
